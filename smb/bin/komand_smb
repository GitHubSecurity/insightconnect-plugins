#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_smb import connection, actions, triggers


Name = 'SMB'
Vendor = 'rapid7'
Version = '1.0.0'
Description = 'Server Message Block (SMB) is used for interacting with files on an SMB server'


class KomandSmb(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.DeleteFile())

        self.add_action(actions.DeleteFiles())

        self.add_action(actions.Echo())

        self.add_action(actions.ListShareFiles())

        self.add_action(actions.ListShares())


def main():
    """Run plugin"""
    cli = komand.CLI(KomandSmb())
    cli.run()


if __name__ == "__main__":
    main()

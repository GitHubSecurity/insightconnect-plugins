#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_sentinelone import connection, actions, triggers


Name = 'SentinelOne'
Vendor = 'rapid7'
Version = '1.1.0'
Description = 'SentinelOne is a next-gen cybersecurity company focused on protecting the enterprise through the endpoint'


class ICONSentinelone(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.GetThreats())

        self.add_action(actions.BlacklistByContentHash())

        self.add_action(actions.BlacklistByIocHash())

        self.add_action(actions.CreateIocThreat())

        self.add_action(actions.GetThreatSummary())

        self.add_action(actions.MarkAsBenign())

        self.add_action(actions.MarkAsThreat())

        self.add_action(actions.MitigateThreat())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONSentinelone())
    cli.run()


if __name__ == "__main__":
    main()
